doctype html
html
	head
		title Edit Page
	body
		h1 Edit Page
		h1= data.id
		hr
		form(action='/edit/'+data.id method='POST')
			fieldset
				legend Edit Data
				table
					tr
						td
							label ID
						td
							input(type='text' name='id' value=data.id disabled) 
					tr
						td
							label Name
						td
							input(type='text' name='name' value=data.name)
					tr
						td
							label Model Number
						td
							input(type='text' name='modelnumber' value=data.modelnumber)
					tr
						td
							label Series
						td
							input(type='text' name='series' value=data.series)
				input(type='submit')
				p
				a(href='/') 메인